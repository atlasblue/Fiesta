
sudo systemctl stop firewalld
sudo systemctl disable firewalld
sudo setenforce 0
sed -i s\/^SELINUX=.*$\/SELINUX=disabled\/ \/etc\/selinux\/config

sudo yum install git -y

git clone https://github.com/sharonpamela/Fiesta /code/Fiesta

sed -i 's/REPLACE_DB_NAME/FiestaDB/g' /code/Fiesta/config/config.js
sed -i "s/REPLACE_DB_HOST_ADDRESS/192.168.2.10/g" /code/Fiesta/config/config.js
sed -i "s/REPLACE_DB_DIALECT/mysql/g" /code/Fiesta/config/config.js
sed -i "s/REPLACE_DB_USER_NAME/root/g" /code/Fiesta/config/config.js
sed -i "s/REPLACE_DB_PASSWORD/fiesta/g" /code/Fiesta/config/config.js

sudo yum install npm -y

npm install -g nodemon

cd /code/Fiesta
npm install
cd /code/Fiesta/client
npm install

npm run build

cd /code/Fiesta
npm start

